@using Kaid.WebAPI.Web.Models.ViewModels
@model ProductViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/Layouts.cshtml";

    var moreImages = ViewBag.MoreImages as List<String>;
    var relatedProducts = ViewBag.RelatedProducts as IEnumerable<ProductViewModel>;
    var tags = ViewBag.Tags as IEnumerable<TagViewModel>;
}

<div class=" single_top">
    <div class="single_grid">
        <div class="grid images_3_of_2">
            <ul id="etalage">
                @foreach (var image in moreImages)
                {
                    <li>
                        <a href="#">
                            <img class="etalage_thumb_image img-responsive" src="@image" />
                            <img class="etalage_source_image img-responsive" src="@image" title="" />
                        </a>
                    </li>
                }

            </ul>
            <div class="clearfix"> </div>
        </div>
        <div class="desc1 span_3_of_2">

            <h4>@Model.Name</h4>
            <div class="cart-b">
                <div class="left-n ">$329.58</div>
                <a class="now-get get-cart-in" href="#">ADD TO CART</a>
                <div class="clearfix"></div>
            </div>
            <h6>Had @Model.Quanlity items in stock</h6>
            <p> @Model.Description </p>
            <div class="share">
                <h5>Tags Product :</h5>
                <ul class="list-inline sub-left-right">
                    @foreach (var tag in tags)
                    {
                        <li><a href="/tag/@(tag.ID).html"> @tag.Name</a></li>
                    }
                </ul>
                <div class="clearfix"></div>
                <h5>Share Product :</h5>
                <ul class="share_nav">
                    <li><a href="#"><img src="~/Assets/client/images/facebook.png" title="facebook"></a></li>
                    <li><a href="#"><img src="~/Assets/client/images/twitter.png" title="Twiiter"></a></li>
                    <li><a href="#"><img src="~/Assets/client/images/rss.png" title="Rss"></a></li>
                    <li><a href="#"><img src="~/Assets/client/images/gpluse.png" title="Google+"></a></li>
                </ul>
            </div>


        </div>
        <div class="clearfix"> </div>
    </div>
    <ul id="flexiselDemo1">
        @foreach (var product in relatedProducts)
        {
            var url = "/" + product.Alias + ".p-" + product.ID + ".html";

            <li><img src="@product.Image" /><div class="grid-flex"><a href="@url">@product.Name</a><p>Rs $@product.Price</p></div></li>
        }


    </ul>


    <div class="toogle">
        <h3 class="m_3">Product Details</h3>
        <p class="m_text">@Html.Raw(Model.Content)</p>
    </div>
</div>

@section footerJS{
    <script type="text/javascript" src="~/Assets/client/js/jquery.flexisel.js"></script>
    <script src="~/Assets/client/js/jquery.etalage.min.js"></script>

    <script type="text/javascript">
        jQuery(document).ready(function ($) {

            $('#etalage').etalage({
                thumb_image_width: 300,
                thumb_image_height: 400,
                source_image_width: 900,
                source_image_height: 1200,
                show_hint: true,
                click_callback: function (image_anchor, instance_id) {
                    alert('Callback example:\nYou clicked on an image with the anchor: "' + image_anchor + '"\n(in Etalage instance: "' + instance_id + '")');
                }
            });

        });
        $("#flexiselDemo1").flexisel({
            visibleItems: 5,
            animationSpeed: 1000,
            autoPlay: true,
            autoPlaySpeed: 3000,
            pauseOnHover: true,
            enableResponsiveBreakpoints: true,
            responsiveBreakpoints: {
                portrait: {
                    changePoint: 480,
                    visibleItems: 1
                },
                landscape: {
                    changePoint: 640,
                    visibleItems: 2
                },
                tablet: {
                    changePoint: 768,
                    visibleItems: 3
                }
            }
        });
    </script>
}


